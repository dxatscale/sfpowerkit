{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "paths": { "*": ["types/*"] },
        "outDir": "./lib",
        "rootDir": "./src",
        "inlineSourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "allowJs": true,
        "lib": ["es6"],
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "lib"],
    "include": ["./src/**/*"]
}
